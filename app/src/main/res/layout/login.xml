<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher_foreground"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="33dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MusicExtreme"
        android:textColorHint="#101010"
        android:textSize="32sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="76dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="346dp"
        android:layout_height="86dp"
        android:text="La aventura está por iniciar, por favor inicia sesión"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="182dp" />

    <EditText
        android:id="@+id/editTextNumberPassword"
        android:layout_width="199dp"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:fontFamily="arial"
        android:inputType="numberPassword"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="396dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="196dp"
        android:layout_height="62dp"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="299dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="arial"
            android:hint="hint"
            android:text=""
            android:inputType="text"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="69dp"
        android:layout_height="153dp"
        app:srcCompat="@drawable/_7icono"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="299dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="245dp"
        android:layout_height="60dp"
        android:backgroundTint="#F6814B"
        android:backgroundTintMode="screen"
        android:text="Ingresar"

        android:textSize="22sp"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="502dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recupera tu contraseña"
        android:textColorHint="#F6814B"
        android:textSize="22sp"
        android:textStyle="normal"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="607dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="378dp"
        android:layout_height="77dp"
        android:backgroundTint="@color/cardview_light_background"
        android:text="Ingresa con Google"
        android:textAlignment="viewEnd"
        android:textColor="#0D0C0C"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="689dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No tienes cuenta?"
        android:textSize="22sp"
        android:textStyle="normal"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="791dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrate"
        android:textColor="@color/ic_launcher_background"
        android:textColorHint="#F6814B"
        android:textSize="22sp"
        tools:layout_editor_absoluteX="265dp"
        tools:layout_editor_absoluteY="792dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="65dp"
        android:layout_height="47dp"
        android:foreground="@drawable/google"
        android:text="TextView"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="707dp" />

</androidx.constraintlayout.widget.ConstraintLayout>